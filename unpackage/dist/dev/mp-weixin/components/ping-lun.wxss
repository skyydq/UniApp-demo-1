.pinglun {
  border-top: dashed 1px #ddd;
  font-size: 15px;
  color: #333;
  padding: 20rpx 0;
  margin-top: 20rpx;
}
.pinglun .fabiao {
  margin: 20rpx 0 40rpx;
}
.pinglun .fabiao .fab-text {
  border: solid 1px #ccc;
  width: 670rpx;
  padding: 10rpx 10rpx;
  height: 140rpx;
  font-size: 14px;
}
.pinglun .fabiao .fab-btn {
  background: #de1515;
  color: #fff;
  display: inline-block;
  padding: 4rpx 10rpx;
  font-size: 13px;
  margin-top: 20rpx;
}
.pinglun .pinglun-cont {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  border-bottom: solid 1px #eee;
  padding: 20rpx 0;
  margin-top: 20rpx;
}
.pinglun .pinglun-cont .pl-left {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 10rpx;
}
.pinglun .pinglun-cont .pl-left .pl-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.pinglun .pinglun-cont .pl-right {
  width: 600rpx;
}
.pinglun .pinglun-cont .pl-right .pl-title {
  font-size: 13px;
  color: #006abc;
}
.pinglun .pinglun-cont .pl-right .pl-title text {
  font-size: 12px;
  color: #666;
  padding-left: 40rpx;
}
.pinglun .pinglun-cont .pl-right .pl-cont {
  font-size: 14px;
  color: #333;
  margin-top: 10rpx;
  border-radius: 7px;
}

